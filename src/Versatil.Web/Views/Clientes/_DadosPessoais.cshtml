<div class="form-row">
    <div class="form-group col-sm-3">
        <label asp-for="bairro" class="control-label text-sm"></label>
        <input asp-for="bairro" class="form-control form-control-sm" />
        <span asp-validation-for="bairro" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="ufID" class="control-label text-sm"></label>
        <select id="selUF" asp-for="ufID" class="form-control form-control-sm" asp-items="@ViewBag.Estados"></select>
        <span asp-validation-for="ufID" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="cidadeID" class="control-label text-sm"></label>
        <select id="selCidades" asp-for="cidadeID" class="form-control form-control-sm"
            asp-items="@ViewBag.Cidades"></select>
        <span asp-validation-for="cidadeID" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-4">
        <label asp-for="email" class="control-label text-sm"></label>
        <input asp-for="email" class="form-control form-control-sm" />
        <span asp-validation-for="email" class="text-danger text-xs"></span>
    </div>
</div>