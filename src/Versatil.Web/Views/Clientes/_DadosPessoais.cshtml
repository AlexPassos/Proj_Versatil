@model Versatil.Domain.ViewModels.ClientesViewModel

 @await Component.InvokeAsync("Summary")
 
<div class="form-row">
    <div class="form-group col-sm-1">
        <label asp-for="id" class="control-label text-sm"></label>
        <input asp-for="id" class="form-control form-control-sm" readonly />
        <span asp-validation-for="id" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="datacad" class="control-label text-sm"></label>
        <input asp-for="datacad" class="form-control form-control-sm" readonly data-inputmask="'mask': '99/99/9999'" />
        <span asp-validation-for="datacad" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="situacao" class="control-label text-sm"></label>
        <select asp-for="situacao" class="form-control form-control-sm">
            <option value=true>Ativo</option>
            <option value=false>Inativo</option>
        </select>
        <span asp-validation-for="situacao" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="tipo" class="control-label text-sm"></label>
        <select asp-for="tipo" class="form-control form-control-sm">
            <option value=1>Pessoa física</option>
            <option value=2>Pessoa jurídica</option>
        </select>
        <span asp-validation-for="tipo" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="cpfcnpj" class="control-label text-sm"></label>
        <input asp-for="cpfcnpj" class="form-control form-control-sm"  />
        <span asp-validation-for="cpfcnpj" class="text-danger text-xs"></span>
    </div>
</div>

<div class="form-row">
   
    <div class="form-group col-sm-7">
        <label asp-for="nome" class="control-label text-sm"></label>
        <input asp-for="nome" class="form-control form-control-sm" />
        <span asp-validation-for="nome" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-5">
        <label asp-for="fantasia" class="control-label text-sm"></label>
        <input asp-for="fantasia" class="form-control form-control-sm" />
        <span asp-validation-for="fantasia" class="text-danger text-xs"></span>
    </div>

</div>
<div class="form-row">

    <div class="form-group col-sm-2">
        <label asp-for="rgie" class="control-label text-sm"></label>
        <input asp-for="rgie" class="form-control form-control-sm" />
        <span asp-validation-for="rgie" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="orgaoemissor" class="control-label text-sm"></label>
        <input asp-for="orgaoemissor" class="form-control form-control-sm" />
        <span asp-validation-for="orgaoemissor" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="dataemissao" class="control-label text-sm"></label>
        <input asp-for="dataemissao" class="form-control form-control-sm" data-inputmask="'mask': '99/99/9999'" />
        <span asp-validation-for="dataemissao" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="nascimento" class="control-label text-sm"></label>
        <input asp-for="nascimento" class="form-control form-control-sm" data-inputmask="'mask': '99/99/9999'" />
        <span asp-validation-for="nascimento" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="telefone" class="control-label text-sm"></label>
        <input asp-for="telefone" class="form-control form-control-sm" data-inputmask="'mask': '(99) 99999-9999'" />
        <span asp-validation-for="telefone" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="celularfax" class="control-label text-sm"></label>
        <input asp-for="celularfax" class="form-control form-control-sm" data-inputmask="'mask': '(99) 9999-9999'" />
        <span asp-validation-for="celularfax" class="text-danger text-xs"></span>
    </div>

</div>

<div class="form-row">
    <div class="form-group col-sm-2">
        <label asp-for="cep" class="control-label text-sm"></label>
        <input asp-for="cep" class="form-control form-control-sm" data-inputmask="'mask': '99.999-999'" />
        <span asp-validation-for="cep" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-5">
        <label asp-for="endereco" class="control-label text-sm"></label>
