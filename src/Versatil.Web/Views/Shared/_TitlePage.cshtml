@{
    bool hideTitle = Convert.ToBoolean(ViewData["HideTitle"]);
    bool hideBreadcrumb = Convert.ToBoolean(ViewData["HideBreadcrumb"]);
}

<!-- Content Header (Page header) -->
@if (!hideTitle || !hideBreadcrumb)
{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2" style="border-bottom: 1px solid #cccccc;">
                @if (!hideTitle)
                {
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark text-lg">@ViewData["Title"]</h1>
                    </div><!-- /.col -->
                }
                @if (!hideBreadcrumb)
                {
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item active text-sm">
                                <breadcrumb></breadcrumb>
                            </li>
                        </ol>
                    </div><!-- /.col -->
                }
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
}
<!-- /.content-header -->