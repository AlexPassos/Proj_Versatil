@model Versatil.Domain.ViewModels.FuncionariosViewModel

 @await Component.InvokeAsync("Summary")
 
<div class="form-row">
    <div class="form-group col-sm-1">
        <label asp-for="id" class="control-label text-sm"></label>
        <input asp-for="id" class="form-control form-control-sm" readonly />
        <span asp-validation-for="id" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="data" class="control-label text-sm"></label>
        <input asp-for="data" class="form-control form-control-sm" readonly data-inputmask="'mask': '99/99/9999'"/>
        <span asp-validation-for="data" class="text-danger text-xs"></span>
    </div>
     <div class="form-group col-sm-2">
        <label asp-for="situacao" class="control-label text-sm"></label>
        <select asp-for="situacao" class="form-control form-control-sm" >
            <option value=true>Ativo</option>
            <option value=false>Inativo</option>
        </select>
        <span asp-validation-for="situacao" class="text-danger text-xs"></span>
    </div>
     <div class="form-group col-sm-2">
        <label asp-for="cpf" class="control-label text-sm"></label>
        <input asp-for="cpf" class="form-control form-control-sm" data-inputmask="'mask': '999.999.999-99'" />
        <span asp-validation-for="cpf" class="text-danger text-xs"></span>
    </div>
</div>

<div class="form-row">
   
    <div class="form-group col-sm-7">
        <label asp-for="nome" class="control-label text-sm"></label>
        <input asp-for="nome" class="form-control form-control-sm" />
        <span asp-validation-for="nome" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="cargo" class="control-label text-sm"></label>
        <input asp-for="cargo" class="form-control form-control-sm" />
        <span asp-validation-for="cargo" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="rg" class="control-label text-sm"></label>
        <input asp-for="rg" class="form-control form-control-sm" />
        <span asp-validation-for="rg" class="text-danger text-xs"></span>
    </div>
   
  
</div>
<div class="form-row">
   
    <div class="form-group col-sm-2">
        <label asp-for="nascimento" class="control-label text-sm"></label>
        <input asp-for="nascimento" class="form-control form-control-sm" data-inputmask="'mask': '99/99/9999'" />
        <span asp-validation-for="nascimento" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="telefone" class="control-label text-sm"></label>
        <input asp-for="telefone" class="form-control form-control-sm" data-inputmask="'mask': '(99) 99999-9999'" />
        <span asp-validation-for="telefone" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="celular" class="control-label text-sm"></label>
        <input asp-for="celular" class="form-control form-control-sm" data-inputmask="'mask': '(99) 9999-9999'" />
        <span asp-validation-for="celular" class="text-danger text-xs"></span>
    </div>
      <div class="form-group col-sm-6">
        <label asp-for="filiacao" class="control-label text-sm"></label>
        <input asp-for="filiacao" class="form-control form-control-sm" />
        <span asp-validation-for="filiacao" class="text-danger text-xs"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-sm-2">
        <label asp-for="cep" class="control-label text-sm"></label>
        <input asp-for="cep" class="form-control form-control-sm" data-inputmask="'mask': '99.999-999'" />
        <span asp-validation-for="cep" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-5">
        <label asp-for="endereco" class="control-label text-sm"></label>
        <input asp-for="endereco" class="form-control form-control-sm" />
        <span asp-validation-for="endereco" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="numero" class="control-label text-sm"></label>
        <input asp-for="numero" class="form-control form-control-sm" />
        <span asp-validation-for="numero" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="complemento" class="control-label text-sm"></label>
        <input asp-for="complemento" class="form-control form-control-sm" />
        <span asp-validation-for="complemento" class="text-danger text-xs"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-sm-3">
        <label asp-for="bairro" class="control-label text-sm"></label>
        <input asp-for="bairro" class="form-control form-control-sm" />
        <span asp-validation-for="bairro" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="ufID" class="control-label text-sm"></label>
        <select id="selUF" asp-for="ufID" class="form-control form-control-sm" asp-items="@ViewBag.Estados"></select>
        <span asp-validation-for="ufID" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="cidadeID" class="control-label text-sm"></label>
        <select id="selCidades" asp-for="cidadeID" class="form-control form-control-sm"
            asp-items="@ViewBag.Cidades"></select>
        <span asp-validation-for="cidadeID" class="text-danger text-xs"></span>
    </div>
    <div class="form-group col-sm-4">
        <label asp-for="email" class="control-label text-sm"></label>
        <input asp-for="email" class="form-control form-control-sm" />
        <span asp-validation-for="email" class="text-danger text-xs"></span>
    </div>
</div>